<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:rowCount="5"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="com.example.user.myapplication.VolumenberechnungMittel">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Mittel in cm" />


    <EditText
        android:id="@+id/mittel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Mittel in cm"
        android:inputType="number"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="99dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Länge in m" />

    <EditText
        android:id="@+id/laenge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Länge in m"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="85dp" />

    <Button
        android:id="@+id/berechnen_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Ausrechnen"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="37dp" />

    <TextView
        android:id="@+id/ergebnis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="47dp"
        android:hint="Ergebnis"
        android:textSize="30dp" />
</GridLayout>
